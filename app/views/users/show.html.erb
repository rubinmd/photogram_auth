<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="jumbotron">
      <h3><%= @user.username %></h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% user_array=[] %>
    <% @user_photos.each do |photo| %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @user.username %>
        <small>
        <%= time_ago_in_words((Time.now-photo.created_at).seconds.ago) %> ago
        </small>
        </h3>
      </div>
      <div class="panel-body">

        <img class="img-responsive" src="<%= photo.image %>">
        <!-- If there are no likes display this -->
        <% if photo.likes.count==0%>
          <p class="text-muted"><a href="#"><i class="fa fa-heart-o"></i></a> be the first to like this</p>
        <% else %>
          <% photo.likes.each do |like| %>
          <% user_array.push(like.user.username) %>
          <% end %>
          <p>
          <% if user_array.include? current_user.username.to_s %>
            <a href="/delete_like/<%= like.id %>"><i class="fa fa-heart"></i></a>
          <% else %>
            <form action="/create_like" method="post">
            <input name="authenticity_token" type="hidden" value="token_value">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            <input type="hidden" name="photo_id" value="<%= photo.id %>">
            <button class="btn btn-link"><i class="fa fa-heart-o"></i></button>
            </form>
          <%end %>
          <%= user_array.to_sentence %>
          <% if photo.likes.count==1%>
            likes this
          <% else %>
            like this
          <% end %>
          </p>
          <% user_array.clear %>
        <% end %>


        <br>
        <% photo.comments.each do |comment| %>




<ul class="media-list">
  <li class="media">
    <div class="media-left">
      <div class="media-body">
        <h6 class="media-heading"><a href="users/<%= comment.user_id %>">
          <%= comment.user.username %>
        </a>
        <small>
        <%= time_ago_in_words((Time.now-photo.created_at).seconds.ago) %> ago
        </small>
        </h6>
        <%= comment.body %>
      </div>
    </div>
  </li>
</ul>
<% end %>

        <br>


  <form action="/create_comment" method="post">
  <div class="form-group">
    <input type="text" class="form-control" name="body" placeholder="Add a new comment">
  </div>
  <div class="form-group">
    <input type="hidden" class="form-control" name="user_id" value="<%= current_user.id %>">
  </div>
    <div class="form-group">
    <input type="hidden" class="form-control" name="photo_id" value="<%= photo.id %>" required>
  </div>
  <div class="form-group">
  <input name="authenticity_token" type="hidden" value="token_value">
  </div>

</form>




      </div>
    </div>
    <% end %>


    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
      <a href="/photos/<%= @user.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @user.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
